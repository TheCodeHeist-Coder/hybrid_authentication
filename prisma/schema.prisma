generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  sessions Session[]
}

model Session {
  id     Int    @id @default(autoincrement())
  userId Int
  valid Boolean @default(true)
  userAgent String
  ip String
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
